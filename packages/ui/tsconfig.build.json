{
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": ["DOM", "ESNext"],
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": false,
        "emitDeclarationOnly": true,
        "declarationDir": "dist",
        "rootDir": "src",
        "baseUrl": ".",
        "types": ["node", "react", "react-dom" ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
